DOCKER_IMG_NAME="$1"

if [ -z "${DOCKER_IMG_NAME}" ]; then
    echo "Syntax: $0 DOCKER_IMG_NAME"
    exit
fi

TIMESTAMP=$(date -d `docker inspect -f '{{ .Created }}' "${DOCKER_IMG_NAME}"` -u '+%Y%m%d%H%M%S')

IFS=':' read -ra IMG_NAME_FIELDS <<< "$DOCKER_IMG_NAME"
IMG_BASENAME="${IMG_NAME_FIELDS[0]}"
IMG_TAG="${IMG_NAME_FIELDS[1]}"

if [ -z "${IMG_TAG}" -o "${IMG_TAG}" = "latest" ] ; then
    NEW_TAG="${TIMESTAMP}"
else
    NEW_TAG="${IMG_TAG}_${TIMESTAMP}"
fi

DOCKER_TAGGED_NAME="${IMG_BASENAME}:${NEW_TAG}"

echo "INFO: Tagging ${DOCKER_IMG_NAME} as ${DOCKER_TAGGED_NAME}" >&2

docker tag "${DOCKER_IMG_NAME}" "${DOCKER_TAGGED_NAME}"

echo "${DOCKER_TAGGED_NAME}"
